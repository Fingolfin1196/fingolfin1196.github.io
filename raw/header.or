    <script>
        function showHeaderCatsTall() {
            var x = document.getElementById("HeaderCats");
            if (x.style.display === "block") {
                x.style.display = "none";
            } else {
                x.style.display = "block";
            }
        }

        function showHeaderGroup(id) {
            var headerGroup = document.getElementById(id);
            for (var i = 0; i < headerGroup.children.length; i++) {
                if (headerGroup.children[i].tagName === "UL") {
                    if (headerGroup.children[i].style.display === "block") {
                        headerGroup.children[i].style.display = "none";
                    } else {
                        headerGroup.children[i].style.display = "block";
                    }
                }
            }
        }
    </script>